<Window x:Class="SEW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEW"
        mc:Ignorable="d"
        Title="SEW - Study English Words"
        
        DataContext="{Binding Source={StaticResource VMLocator}, Path=MainVM}"
        Height="500" Width="950" ResizeMode="CanResizeWithGrip"
        MinWidth="785" MinHeight="420"
        MaxWidth="1280" MaxHeight="720" >
    <DockPanel>
        <Border DockPanel.Dock="Left" Width="150">
            <StackPanel>
                <Button Content="   Учить" Style="{DynamicResource SLeftPanel}" Command="{Binding GoToLearnPage}" />
                <Button Content="   Категории" Style="{DynamicResource SLeftPanel}" Command="{Binding GoToCategoriesPage}" />
                <Button Content="   Найти слово" Style="{DynamicResource SLeftPanel}" Command="{Binding GoToSearchPage}" />
                <Button Content="   Настройки" Style="{DynamicResource SLeftPanel}" Command="{Binding GoToSettingsPage}" />
            </StackPanel>
        </Border>
        <Grid>
            <Frame x:Name="Main" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" />
        </Grid>
    </DockPanel>
</Window>
