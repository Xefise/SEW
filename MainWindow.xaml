<Window x:Class="SEW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SEW"
        mc:Ignorable="d"
        Title="SEW - Study English Words" Height="500" Width="900" ResizeMode="CanResizeWithGrip" Background="#242424">
    <DockPanel>
        <Border DockPanel.Dock="Left" Background="#202020" Width="150">
            <StackPanel>
                <Button Content="   Учить" Style="{DynamicResource SLeftPanel}" Template="{DynamicResource TButtons}"/>
                <Button Content="   Категории" Style="{DynamicResource SLeftPanel}" Template="{DynamicResource TButtons}"/>
                <Button Content="   Статистика" Style="{DynamicResource SLeftPanel}" Template="{DynamicResource TButtons}"/>
                <Button Content="   Настройки" Style="{DynamicResource SLeftPanel}" Template="{DynamicResource TButtons}"/>
            </StackPanel>
        </Border>
        <Grid>
            <local:Categories></local:Categories>
        </Grid>
    </DockPanel>
</Window>
